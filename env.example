# 数据库
DATABASE_URL=sqlite+aiosqlite:///./blog.db

# JWT
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://localhost:6379/0

# 邮箱
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your@email.com
EMAIL_PASSWORD=yourpassword
EMAIL_FROM=your@email.com
EMAIL_ENABLED=true

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5173

# 前端
FRONTEND_URL=http://localhost:3000

# 应用
APP_NAME=FastAPI Blog System
DEBUG=true

# 定时任务
TIMEZONE=Asia/Shanghai
SCHEDULER_CLEANUP_REDIS_ENABLED=true
SCHEDULER_CLEANUP_REDIS_CRON=0 * * * *
SCHEDULER_SYSTEM_NOTIFICATION_ENABLED=true
SCHEDULER_SYSTEM_NOTIFICATION_CRON=5 * * * *

# OAuth
GITHUB_CLIENT_ID=xxx
GITHUB_CLIENT_SECRET=xxx
GOOGLE_CLIENT_ID=xxx
GOOGLE_CLIENT_SECRET=xxx
OAUTH_BASE_URL=http://localhost:8000

# 代理
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=

# 实时通知
NOTIFICATION_WEBSOCKET_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL=contemnewton@163.com
ENABLE_NOTIFICATION_FETCH=true
ENABLE_NOTIFICATION_PUSH=true